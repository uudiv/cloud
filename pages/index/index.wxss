page {
  height: 100%;
}

.root {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.tabs {
  display: flex;
}

.tabs .item {
  font-size: 12px;
  flex: 1;
  text-align: center;
  padding: 8px 0;
  background-color: #222;
  color: #ccc;
}

.tabs .item.active {
  color: #fff;
  border-bottom: 2px solid #e9232c;
}

.content {
  background-color: blue;
  flex: 1;
}

.player {
  display: flex;
  height: 50px;
  background-color: #17181a;
}

.poster image {
  width: 40px;
  height: 40px;
  margin: 5px;
}

.info {
  flex: 1;
  color: #888;
  font-size: 14px;
  margin: 5px;
}

.info .title {
  display: block;
  color: #ccc;
}

.controls image {
  width: 40px;
  height: 40px;
  margin: 5px 2px;
}
